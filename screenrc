encoding UTF-8

altscreen on

startup_message off

term screen-256color
termcapinfo rxvt* ti@:te@

backtick 1 5 5 true
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "%n: %t"

caption string '%{= dW}%-Lw%{= dY}%50> %n*%f %t%{= dW}%+Lw%< %{= dW}%-=%D %m/%d/%y %C %A %1`%{-}'
caption always

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
